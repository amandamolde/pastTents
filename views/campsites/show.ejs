<% include ../partials/_header %>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1><%= campsite.location %></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
				<ol class="carousel-indicators">
				  <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
				  <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
				  <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
				</ol>
				<div class="carousel-inner">
				  <div class="carousel-item active">
				    <img class="d-block w-100" src="https://boyslifeorg.files.wordpress.com/2014/04/tent-featured.jpg?w=620&h=465">
				  </div>
				  <div class="carousel-item">
				    <img class="d-block w-100" src="https://cdn1.freshoffthegrid.com/wp-content/uploads/guide-to-free-campsites-in-the-us-and-canada.jpg">
				  </div>
				  <div class="carousel-item">
				    <img class="d-block w-100" src="https://cdn.vox-cdn.com/thumbor/-JoPdcgAuLTUsWiDZ62CX4wb33k=/0x0:5225x3479/1200x800/filters:focal(2195x1322:3031x2158)/cdn.vox-cdn.com/uploads/chorus_image/image/54137643/camping_tents.0.jpg">
				  </div>
				</div>
				<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
				  <span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				  <span class="carousel-control-next-icon" aria-hidden="true"></span>
				  <span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
	<div class="row">
		<% if (campsite.rv_sites === "yes") { %>
			<div class="col-xs-2">
				<img src="/images/rv.png">
				<p>RV Sites</p>
			</div>
		<% } %>
		<% if (campsite.tent_sites === "yes") { %>
			<div class="col-xs-2">
				<img src="/images/tents.png">
				<p>Tent Sites</p>
			</div>
		<% } %>
		<% if (campsite.fire_rings === "yes") { %>
			<div class="col-xs-2">
				<img src="/images/fires.png">
				<p>Fire Rings</p>
			</div>
		<% } %>
		<% if (campsite.pets_allowed === "yes") { %>
			<div class="col-xs-2">
				<img src="/images/pets.png">
				<p>RV Sites</p>
			</div>
		<% } %>
		<% if (campsite.drinking_water === "yes") { %>
			<div class="col-xs-2">
				<img src="/images/water.png">
				<p>RV Sites</p>
			</div>
		<% } %>
		<% if (campsite.toilets === "yes") { %>
			<div class="col-xs-2">
				<img src="/images/toilets.png">
				<p>RV Sites</p>
			</div>
		<% } %>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<h4>Overview</h4>
			<p><%=campsite.overview%></p>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<h4>Details</h4>
			<p><%=campsite.details%></p>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<h4>Reviews</h4>
			<p><%=campsite.reviews%></p>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<a class="btn btn-primary" href="/campsites/<%=campsite.id%>/edit">Edit Campsite</a>
		</div>
	</div>
</div>

<% include ../partials/_footer %>