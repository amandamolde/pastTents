<% include ../partials/_header %>

<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1>Browse Your Reviews</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-12">
			<a class="btn btn-info" href="/reviews/new">Review a Campsite</a>
		</div>
	</div>
	<br>
	<div>
		<% for (let i = 0; i < reviews.length; i++) { %>
		<ul style="list-style-type: none">
			<li>
				<div class="row">
						<h5><a href="/reviews/<%=reviews[i].id%>"><%=reviews[i].location%></a></h5>
					</div>
				</div>
			</li>
		</ul>
  	<% } %>
  </div>
</div>

<% include ../partials/_footer %>